<mvx:MvxWindow
    x:Class="InfonetPOS.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvx="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    mc:Ignorable="d"
    Title="Infonet POS" 
    Icon="/Images/pump.png"
    WindowState="Maximized"
    FontSize="{StaticResource BaseFontSize}">


    <mvx:MvxWindow.Background>

        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
            <GradientStop Color="#97DBFF" Offset="0"/>
            <GradientStop Color="#4CB3FF" Offset="0.5"/>
        </LinearGradientBrush>

    </mvx:MvxWindow.Background>

</mvx:MvxWindow>